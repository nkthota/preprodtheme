<div class="contact_index">
  <div class="page-width">
    <div class="grid">
      <div class="grid__item">
        <div class="form-vertical contact_form">
          {% form 'contact' %}

          {% if form.posted_successfully? %}
          <p class="note note--success">
            {{ 'contact.form.post_success' | t }}
          </p>
          {% endif %}

          {{ form.errors | default_errors }}

          <div class="grid grid--small">
            <div class="grid__item medium-up--one-whole">
              <input type="text" id="ContactFormName" class="input-full text_14" name="contact[name]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Full Name">
            </div>

            <div class="grid__item medium-up--one-whole">
              <input type="email" id="ContactFormEmail" class="input-full text_14" name="contact[email]" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" placeholder="Enter Your E-Mail">
            </div>

            <div class="grid__item medium-up--one-whole">
              <input type="text" id="ContactFormPhone" class="input-full text_14" name="contact[phone]" autocapitalize="off" placeholder="Mobile Number">
            </div>

            <div class="grid__item medium-up--one-whole">
              <button type="submit" class="btn text_14 contact_submit_btn">SUBMIT</button>
            </div>
          </div>         
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>