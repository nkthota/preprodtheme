<style>
  .ssw-social-login-widget {
    margin-top: -30px;
  }
  .ssw-gdpr-subscribe-notify.ssw-muted {
    margin-top: -20px;
  }
  .ssw-socialconnect > .ssw-fbconnect.ssw-social-btn > a {
    background: #000;
    border: none !important;
    color: #fff !important;
  }
  .ssw-socialconnect > .ssw-gconnect > a,
  .ssw-socialconnect > .ssw-azconnect > a,
  .ssw-socialconnect > .ssw-gconnect > a:hover,
  .ssw-socialconnect > .ssw-azconnect > a:hover {
    box-shadow: none;
    color: #fff !important;
    background: #000;
  }
  .ssw-fbconnect.ssw-social-btn .ssw-icon-facebook::before {
    background-color: transparent !important;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a {
    display: flex !important;
    align-items: center;
    height: 34px !important;
    overflow: hidden;
    background: #000 !important;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a i,
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a svg {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a svg {
    margin-left: 11px !important;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a i {
    height: 52px;
    width: 44px;
    margin-left: 2px;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a i.ssw-icon-facebook {
    margin-top: -8px;  
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a span {
    text-align: center;
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 0;
    text-transform: uppercase;
    font-size: 11px;
    font-weight: 300;
    letter-spacing: 0.72px;
    line-height: 11px;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a i, 
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a svg {
    position: relative;
    z-index: 9;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a {
    position: relative;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a:before {
    content: "";
    background: #393939;
    position: absolute;
    left: 0;
    top: 0;
    width: 35px;
    height: 52px;
    z-index: 1;
  }
  .ssw-social-login-widget .ssw-socialconnect .ssw-fbconnect.ssw-social-btn a span {
    padding-left: 5px;
  }
  .ssw-socialconnect > .ssw-social-btn > a > svg, 
  .ssw-socialconnect > .ssw-social-btn > a > i,
  .ssw-fbconnect.ssw-social-btn .ssw-icon-facebook:before {
    font-size: 14px !important;
    width: 16px;
  }
  
  @media only screen and (max-width: 1024px){
    .ssw-socialconnect {
      flex-wrap: wrap;
      max-width: 280px;
      margin-left: auto;
      margin-right: auto;
    }
    .ssw-social-btn {
      margin-left: 0 !important;
    }
    .ssw-socialconnect > div.ssw-social-btn > a {
      max-width: 90%;
      margin: 0 auto;
    }
    .ssw-social-btn {
      margin-bottom: 0 !important;
      margin-top: 10px !important;
      margin-left: 0 !important;
    }
    .ssw-gdpr-subscribe-notify.ssw-muted {
      margin-top: -5px;
    }
    .ssw-social-login-widget .ssw-socialconnect .ssw-social-btn a i {
      margin-left: 0px;
    }
    .ssw-gconnect.ssw-social-btn a[title="Sign-in with Twitter"] span {
      margin-right: -10px;
    }
    .ssw-social-login-widget .ssw-socialconnect .ssw-fbconnect.ssw-social-btn a span {
      padding-left: 0;
    }
    .ssw-gconnect.ssw-social-btn a[title="Google"] span {
      margin-right: -10px;
    }
  }
</style>

<script>
  $(document).ready(function() {
    $(".ssw-fbconnect.ssw-social-btn a span").text('facebook');
  });
</script>